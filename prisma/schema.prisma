// Prisma schema for PostgreSQL (production)
// For local development, use SQLite by setting DATABASE_URL to "file:./dev.db"
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  phone     String
  date      String
  time      String
  service   String?
  message   String?
  createdAt DateTime @default(now())
}













